#!/bin/bash

edit () {
    case $1 in
        scripts )
            nano ./project
            ;;

        * )
            nano ./HOOBS.code-workspace
            ;;
    esac
}

clone () {
    echo "cloning $1"

    case $1 in
        console )
            [[ -d console ]] || git clone https://github.com/hoobs-org/helm.git
            [[ -d console ]] || mv helm console
            (cd console && git checkout blackwing)
            ;;

        repo | security )
            [[ -d $1 ]] || git clone https://github.com/hoobs-org/$1.git
            ;;

        * )
            [[ -d $1 ]] || git clone https://github.com/hoobs-org/$1.git
            (cd $1 && git checkout blackwing)
            ;;
    esac
}

install () {
    echo "installing $1"

    (cd $1 && ../node_modules/.bin/yarn install)
}

push () {
    echo "pushing $1"

    (cd $1 && git push)
}

pull () {
    echo "pulling $1"

    (cd $1 && git pull && git checkout blackwing)
}

yarn () {
    COMMAND=$1
    PROJECT=$2

    shift
    shift

    case $COMMAND in
        install )
            (cd $PROJECT && ../node_modules/.bin/yarn install)
            ;;

        add )
            (cd $PROJECT && ../node_modules/.bin/yarn add $@)
            ;;

        remove )
            (cd $PROJECT && ../node_modules/.bin/yarn remove $@)
            ;;

        cache )
            (cd $PROJECT && ../node_modules/.bin/yarn cache $@)
            ;;
    esac
}

version () {
    case $1 in
        gui | sdk | portal | console | network | pam | image )
            (cd $1 && ./project version $2)
            ;;
    esac
}

lint() {
    case $1 in
        gui | sdk | portal | console | network )
            (cd $1 && ./project version $2)
            ;;
    esac
}

debug() {
    case $1 in
        gui | portal | console )
            (cd $1 && ./project debug)
            ;;
    esac
}

build() {
    case $1 in
        localization )
            (cd lang && ./build)
            ;;

        gui | sdk | portal | console | network | pam | image )
            (cd $1 && ./project build $2)
            ;;
    esac
}

rebuild() {
    case $1 in
        image )
            (cd $1 && ./project rebuild)
            ;;
    esac
}

publish() {
    case $1 in
        list )
            list $2
            ;;

        gui | sdk | portal | console | network | pam )
            (cd $1 && ./project publish $2 $3)
            ;;
    esac
}

list () {
    case $1 in
        stable | edge | bleeding )
            reprepro -b ./repo/debian list $1
            ;;

        * )
            reprepro -b ./repo/debian list stable
            reprepro -b ./repo/debian list edge
            reprepro -b ./repo/debian list bleeding
            ;;
    esac
}

clean() {
    case $1 in
        gui | sdk | portal | console | network | pam | image )
            (cd $1 && ./project clean)
            ;;
    esac 
}

case $1 in
    edit )
        shift
        edit $@
        ;;

    setup )
        npm install

        clone cli
        clone console
        clone desktop
        clone gui
        clone hoobsd
        clone image
        clone network
        clone pam
        clone portal
        clone repo
        clone sdk
        clone security

        install cli
        install console
        install desktop
        install gui
        install hoobsd
        install network
        install pam
        install portal
        install sdk
        ;;

    push )
        git push

        push cli
        push console
        push desktop
        push gui
        push hoobsd
        push image
        push network
        push pam
        push portal
        push repo
        push sdk
        push security
        ;;

    pull )
        git pull
        npm install

        pull cli
        pull console
        pull desktop
        pull gui
        pull hoobsd
        pull image
        pull network
        pull pam
        pull portal
        pull repo
        pull sdk
        pull security

        install cli
        install console
        install desktop
        install gui
        install hoobsd
        install network
        install pam
        install portal
        install sdk
        ;;

    install )
        shift
        yarn install $@
        ;;

    add )
        shift
        yarn add $@
        ;;

    remove )
        shift
        yarn remove $@
        ;;

    cache )
        shift
        yarn cache $@
        ;;

    version )
        shift
        version $@
        ;;

    lint )
        shift
        lint $@
        ;;

    debug )
        shift
        debug $@
        ;;

    build )
        shift
        build $@
        ;;

    rebuild )
        shift
        rebuild $@
        ;;

    publish )
        shift
        publish $@
        ;;

    clean )
        shift
        clean $@
        ;;
esac
