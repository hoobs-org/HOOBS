#!/bin/bash

[[ -d hoobsd ]] || git clone https://github.com/hoobs-org/hoobsd.git
[[ -d cli ]] || git clone https://github.com/hoobs-org/cli.git
[[ -d gui ]] || git clone https://github.com/hoobs-org/gui.git
[[ -d desktop ]] || git clone https://github.com/hoobs-org/desktop.git
[[ -d mobile ]] || git clone https://github.com/hoobs-org/mobile.git
[[ -d sdk ]] || git clone https://github.com/hoobs-org/sdk.git
[[ -d migration ]] || git clone https://github.com/hoobs-org/migration.git
[[ -d repo ]] || git clone https://github.com/hoobs-org/repo.git
[[ -d connect ]] || git clone https://github.com/hoobs-org/connect.git

yarn install

cd ./hoobsd
git checkout sierra
yarn install

cd ../cli
git checkout sierra
yarn install
yarn build

cd ../gui
git checkout sierra
yarn install

cd ../mobile
git checkout sierra
yarn install

cd ../desktop
git checkout sierra
yarn install

cd ../sdk
git checkout sierra
yarn install
yarn build

cd ../connect
git checkout sierra
yarn install

cd ../migration
git checkout sierra
yarn install

cd ../
